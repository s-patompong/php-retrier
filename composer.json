{
    "name": "s-patompong/php-retrier",
    "description": "A package that provide Retrier class that you can use to retry your logic easily",
    "keywords": [
        "s-patompong",
        "php-retrier"
    ],
    "homepage": "https://github.com/s-patompong/php-retrier",
    "license": "MIT",
    "authors": [
        {
            "name": "Patompong Savaengsuk",
            "email": "p.pangpond@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "SPatompong\\Retrier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SPatompong\\Retrier\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
